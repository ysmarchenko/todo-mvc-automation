if [ "$FORMAT_EXIT_CODE" -ne 0 ] || [ "$LINT_EXIT_CODE" -ne 0 ]; then
  echo "âŒ Commit aborted due to lint/prettier errors."
  exit 1
fi

echo "âœ… Lint and prettier passed. Proceeding with commit."